[Unit]
Description=Mirror Maker Daemon
Requires=network-online.target
[Service]
User=root
Group=root
Type=simple
Environment="JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64"
Environment="KAFKA_OPTS=-javaagent:/opt/monitoring/jmx_prometheus_javaagent-0.18.0.jar=7071:/opt/monitoring/connect-jmx.yml"
ExecStart=/bin/sh -c '/opt/kafka/bin/connect-mirror-maker.sh /opt/kafka/config/connect-mirror-maker.properties > /opt/mm/systemlogs/mm.log 2>&1'
Restart=on-abnormal
[Install]
WantedBy=multi-user.target