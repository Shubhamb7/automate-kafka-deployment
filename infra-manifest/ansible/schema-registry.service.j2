[Unit]
Description=Apicurio Schema Registry Server
Requires=network-online.target
[Service]
User=root
Group=root
Type=simple
Environment="JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64"
ExecStart=/bin/sh -c 'java -Dregistry.kafka.common.bootstrap.servers={{ kafka_ips }} -jar /opt/schemareg/apicurio-registry-storage-kafkasql-2.4.1.Final-runner.jar  > /opt/schemareg/systemlogs/schemareg.log 2>&1'
Restart=on-abnormal
[Install]
WantedBy=multi-user.target
